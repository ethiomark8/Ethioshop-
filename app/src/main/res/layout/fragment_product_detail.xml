<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Product Images -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerImages"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrevious"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/space2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="24dp"
                app:icon="@android:drawable/ic_media_previous"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintBottom_toBottomOf="@id/viewPagerImages"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/viewPagerImages" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="@dimen/space2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="24dp"
                app:icon="@android:drawable/ic_media_next"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintBottom_toBottomOf="@id/viewPagerImages"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/viewPagerImages" />

            <!-- Image Indicators -->
            <LinearLayout
                android:id="@+id/imageIndicators"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space2"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/viewPagerImages"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Product Info -->
            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space4"
                android:layout_marginTop="@dimen/space3"
                android:layout_marginEnd="@dimen/space4"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_h2"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewPagerImages"
                tools:text="Samsung Galaxy S22 Ultra" />

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space2"
                android:textColor="@color/accent_primary"
                android:textSize="@dimen/text_h1"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvProductTitle"
                app:layout_constraintTop_toBottomOf="@id/tvProductTitle"
                tools:text="ETB 65,000" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space2"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small"
                app:chipBackgroundColor="@color/accent_success"
                app:chipCornerRadius="12dp"
                app:layout_constraintStart_toStartOf="@id/tvProductTitle"
                app:layout_constraintTop_toBottomOf="@id/tvProductPrice"
                tools:text="New" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space1"
                android:layout_marginTop="@dimen/space2"
                android:drawablePadding="@dimen/space1"
                android:textColor="@color/disabled"
                android:textSize="@dimen/text_caption"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/chipCondition"
                app:layout_constraintTop_toBottomOf="@id/tvProductPrice"
                tools:text="Addis Ababa, Bole" />

            <!-- Seller Info -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSeller"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space4"
                app:cardBackgroundColor="@color/surface_light"
                app:cardCornerRadius="@dimen/card_corner"
                app:cardElevation="@dimen/elevation_low"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLocation">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space3">

                    <TextView
                        android:id="@+id/tvSellerLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seller"
                        android:textColor="@color/disabled"
                        android:textSize="@dimen/text_small"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvSellerName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space1"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_body"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/ivVerified"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvSellerLabel"
                        tools:text="John Doe" />

                    <ImageView
                        android:id="@+id/ivVerified"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/verified_seller"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/tvSellerName"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvSellerName"
                        app:srcCompat="@android:drawable/presence_online"
                        app:tint="@color/accent_success"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescriptionLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space4"
                android:layout_marginTop="@dimen/space3"
                android:layout_marginEnd="@dimen/space4"
                android:text="@string/description"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_h3"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardSeller" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space4"
                android:layout_marginTop="@dimen/space1"
                android:layout_marginEnd="@dimen/space4"
                android:layout_marginBottom="@dimen/space4"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_body"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDescriptionLabel"
                tools:text="Product description goes here..." />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Bar -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabAlignmentMode="end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/space4"
            android:paddingEnd="@dimen/space4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChat"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space2"
                android:layout_weight="1"
                android:text="@string/chat"
                app:icon="@android:drawable/ic_dialog_email"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_to_cart"
                app:icon="@android:drawable/ic_menu_add"
                app:iconGravity="textStart" />

        </LinearLayout>

    </com.google.android.material.bottomappbar.BottomAppBar>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>