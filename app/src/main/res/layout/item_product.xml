<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space2"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/card_corner"
    app:cardElevation="@dimen/elevation_low">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space3">

        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="@dimen/product_image_width"
            android:layout_height="@dimen/product_image_height"
            android:scaleType="centerCrop"
            android:contentDescription="@string/products"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/tvProductTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space3"
            android:layout_marginEnd="@dimen/space2"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_body"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivProductImage"
            app:layout_constraintTop_toTopOf="@id/ivProductImage"
            tools:text="Samsung Galaxy S22" />

        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space2"
            android:textColor="@color/accent_primary"
            android:textSize="@dimen/text_h3"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvProductTitle"
            app:layout_constraintTop_toBottomOf="@id/tvProductTitle"
            tools:text="ETB 45,000" />

        <TextView
            android:id="@+id/tvProductLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space1"
            android:drawablePadding="@dimen/space1"
            android:textColor="@color/disabled"
            android:textSize="@dimen/text_caption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvProductTitle"
            app:layout_constraintTop_toBottomOf="@id/tvProductPrice"
            tools:text="Addis Ababa, Bole" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space2"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small"
            app:chipBackgroundColor="@color/accent_success"
            app:chipCornerRadius="12dp"
            app:layout_constraintStart_toStartOf="@id/tvProductTitle"
            app:layout_constraintTop_toBottomOf="@id/tvProductLocation"
            tools:text="New" />

        <ImageView
            android:id="@+id/ivVerified"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginTop="@dimen/space2"
            android:contentDescription="@string/verified_seller"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/chipCondition"
            app:layout_constraintStart_toEndOf="@id/chipCondition"
            app:layout_constraintTop_toTopOf="@id/chipCondition"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>